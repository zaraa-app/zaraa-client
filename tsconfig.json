{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "ES2024"],
    "jsx": "react-native",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["react-native"],
    "checkJs": true,
    "paths": {
      "@/*": ["./*"],
      "react": ["./node_modules/react"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts",
    "prettier.config.js",
    "constants/Images.ts",
    "plugins/normalizePlugin.ts",
    "utils/normalize.ts",
    "tailwind.config.js",
    "context/GlobalProvider.js"
  ]
}
